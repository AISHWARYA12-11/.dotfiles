{
    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.hoverTarget": "echo",
    "coc.preferences.rootPatterns": [
        ".vim",
        ".git",
        ".hg",
        ".projections.json"
    ],
    "coc.preferences.willSaveHandlerTimeout": 1000,
    "coc.source.around.firstMatch": false,
    "coc.preferences.formatOnSaveFiletypes": [
        "json",
        "markdown",
        "html",
        "css",
        "javascript",
        "python",
        "cpp",
        "c"
    ],
    "diagnostic.messageTarget": "echo",
    "html.format.enable": true,
    "html.format.preserveNewLines": true,
    "html.format.maxPreserveNewLines": 2,
    "html.format.indentInnerHtml": false,
    "html.format.wrapAttributes": "force",
    "html.format.wrapAttributesIndentSize": 4,
    "html.suggest.html5": true,
    "python.sortImports.path": "/usr/bin/isort",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/usr/bin/black",
    "python.pythonPath": "/usr/bin/python",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "flake8",
    "python.linting.enabled": true,
    "pyright.enable": true,
    "signature.target": "echo",
    "suggest.timeout": 15000,
    "suggest.floatEnable": false,
    "xml.format.splitAttributes": true,
    "xml.format.joinContentLines": true,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/13.0.0/clangd_13.0.0/bin/clangd"
}
